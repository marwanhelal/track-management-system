# PRODUCTION ENVIRONMENT CONFIGURATION
# ⚠️ NEVER COMMIT THIS FILE TO VERSION CONTROL!

# Server Configuration
NODE_ENV=production
PORT=5005
HOST=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=track_management
DB_USER=cdtms_app
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
DB_SSL=false
DB_POOL_MIN=10
DB_POOL_MAX=100

# JWT Configuration - GENERATE NEW SECRETS BEFORE DEPLOYMENT
# Run: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERATE_A_NEW_64_CHARACTER_SECRET_HERE
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=GENERATE_A_DIFFERENT_64_CHARACTER_SECRET_HERE
JWT_REFRESH_EXPIRES_IN=7d

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration - UPDATE WITH YOUR SERVER IP
CORS_ORIGIN=http://YOUR_SERVER_IP
CORS_CREDENTIALS=true

# API Configuration
API_PREFIX=/api/v1
API_DOCS_ENABLED=false

# Socket.IO Configuration - UPDATE WITH YOUR SERVER IP
SOCKET_CORS_ORIGIN=http://YOUR_SERVER_IP

# INSTRUCTIONS:
# 1. Replace YOUR_SERVER_IP with actual Windows Server IP address
# 2. Generate new JWT_SECRET and JWT_REFRESH_SECRET (see commands above)
# 3. Set strong DB_PASSWORD (16+ characters with special chars)
# 4. Save this file as .env in production server (not .env.production)
